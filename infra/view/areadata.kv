<AreaData>:  
    orientation: "vertical"   
    padding: 5        
    canvas:
        Color:            
            rgb: C("#80b3ff")
        Rectangle:
            size: root.size
            pos: root.pos                 
    BoxLayout: 
        padding: 2                    
        Button:
            id: dia
            size_hint: .1, 1
            width:30
            text: root.dia
            bold: True 
            color:  C("#FFFFFF")   
            background_color:  C("#A9A9A9") 
            background_normal: ""
            on_press: root.on_press_dia()

        Button:     
            id: mes            
            size_hint: .4, 1  
            width:100  
            text: root.mes     
            bold: True 
            color:  C("#FFFFFF")   
            background_color:  C("#A9A9A9") 
            background_normal: ""
            on_press: root.on_press_mes()
        Button:   
            id: ano              
            size_hint: .2, 1   
            width:60  
            text: root.ano  
            bold: True 
            color:  C("#FFFFFF")   
            background_color:  C("#A9A9A9") 
            background_normal: ""
            on_press: root.on_press_ano()

        Label:
            size_hint: .3, 1
            id: dataGregoriana
            italic: True                
            text: root.dataGregoriana  
            color:  C("#FFFFFF")