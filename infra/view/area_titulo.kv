<AreaTitulo>:
    canvas:
        Color:            
            rgb: C("#4A93E7")
        Rectangle:
            size: root.size
            pos: root.pos         

    Label:

        bold: True
        pos_hint: {"right":1, "top":1}
        text:root.titulo
        color:  C("#FFFFFF")
        font_height: 100        
        ellipsis_options: {'color':(1,0.5,0.5,1),'underline':True}

        