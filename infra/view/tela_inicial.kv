#:import C kivy.utils.get_color_from_hex

<TelaInicial>:
    orientation: "vertical" 
    
    AreaMenu:  
        size_hint: 1, .1                     
    BoxLayout:  
        padding: 5            
        orientation: "vertical" 
        canvas:            
            Rectangle:
                size: self.size
                pos: self.pos
                #source: root.background
        AreaTitulo:  
            size_hint: 1, .08     
        AreaData: 
            size_hint: 1, .08
        BoxLayout:   
            size_hint: 1, .32  
            canvas:
                Color:            
                    rgb: C("#4A93E7")
                Rectangle:
                    size: self.size
                    pos: self.pos  
            AreaCalendario: 
        BoxLayout:
            id: tela_secundaria
            size_hint: 1, .4 
