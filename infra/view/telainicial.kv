#:import C kivy.utils.get_color_from_hex

<TelaInicial>:
    orientation: "vertical"  
    AreaMenu:  
        size_hint: 1, .05            
    BoxLayout:  
        padding: 5            
        orientation: "vertical" 
        canvas:            
            Rectangle:
                size: self.size
                pos: self.pos
                source: root.background
        AreaTitulo:  
            size_hint: 1, .07     
        AreaData: 
            size_hint: 1, .08
        BoxLayout:   
            size_hint: 1, .32  
            canvas:
                Color:            
                    rgb: C("#3385ff")
                Rectangle:
                    size: self.size
                    pos: self.pos  
            AreaCalendario: 
        BoxLayout:
            id: tela_secundaria
            size_hint: 1, .4 
